[DEFAULTS]
ifmap_server_ip=<%= @config_ip %>
ifmap_server_port=<%= @ifmap_server_port %>
ifmap_username=api-server
ifmap_password=api-server
cassandra_server_list=<%= @cassandra_ip_list.map{ |ip| "#{ip}:#{@cassandra_port}" }.join(' ') %>
listen_ip_addr=<%= @api_listen %>
listen_port=<%= @api_local_listen_port %>
auth=keystone
multi_tenancy=<%= @multi_tenancy %>
log_file=/var/log/contrail/api.log
disc_server_ip=<%= @config_ip %>
disc_server_port=<%= @discovery_server_port %>
zk_server_ip=<%= @zk_ip_list.map{ |ip| "#{ip}:#{@zk_port}" }.join(',') %>
redis_server_ip=<%= @redis_ip %>
rabbit_server=<%= @rabbit_ip %>
rabbit_port=<%= @rabbit_port %>

[SECURITY]
use_certs=<%= @use_certs %>
keyfile=/etc/contrail/ssl/private_keys/apiserver_key.pem
certfile=/etc/contrail/ssl/certs/apiserver.pem
ca_certs=/etc/contrail/ssl/certs/ca.pem

[KEYSTONE]
auth_host=<%= @keystone_host %>
auth_protocol=<%= @keystone_protocol %>
auth_port=<%= @keystone_admin_port %>
admin_user=<%= @keystone_admin_user %>
admin_password=<%= @keystone_admin_password %>
admin_token=<%= @keystone_admin_token %>
admin_tenant_name=<%= @keystone_admin_tenant %>
<% if @keystone_insecure -%>
insecure=<%= @keystone_insecure %>
<% end -%>
<% if @contrail_memcache_servers -%>
memcache_servers=<%= @contrail_memcache_servers %>
<% end -%>
