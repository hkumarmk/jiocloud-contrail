[DEFAULTS]
ifmap_server_ip=<%= @config_ip %>
ifmap_server_port=<%= @ifmap_server_port %>
ifmap_username=schema-transformer
ifmap_password=schema-transformer
api_server_ip=<%= @config_ip %>
api_server_port=<%= @api_server_port %>
<% @zk_port ||= 2181 -%>
zk_server_ip=<%= @zk_ip_list.map{ |ip| "#{ip}:#{@zk_port}" }.join(',') %>
log_file=/var/log/contrail/schema.log
<% @cassandra_port ||= 9160 -%>
cassandra_server_list=<%= @cassandra_ip_list.map{ |ip| "#{ip}:#{@cassandra_port}" }.join(' ') %>
disc_server_ip=<%= @config_ip %>
<% @discovery_server_port ||= 5998 -%>
disc_server_port=<%= @discovery_server_port %>

[SECURITY]
use_certs=<%= @use_certs %>
keyfile=/etc/contrail/ssl/private_keys/schema_xfer_key.pem
certfile=/etc/contrail/ssl/certs/schema_xfer.pem
ca_certs=/etc/contrail/ssl/certs/ca.pem

[KEYSTONE]
<% @keystone_admin_user ||= 'admin' -%>
admin_user=<%= @keystone_admin_user %>
admin_password=<%= @keystone_admin_password %>
<% @keystone_admin_tenant ||= 'openstack' -%>
admin_tenant_name=<%= @keystone_admin_tenant %>
admin_token=<%= @keystone_admin_token %>
